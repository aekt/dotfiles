" Behavior
set autoread
set lazyredraw
set updatetime=200

" Display
set number
set wildmenu
set regexpengine=2

" Format
filetype plugin indent on
set encoding=utf-8
syntax enable

" Indentation
set autoindent
set backspace=indent,eol,start
set expandtab
set shiftwidth=2
set softtabstop=2

" Search
set ignorecase
set incsearch
set nohlsearch
set smartcase

" Style
colorscheme default
